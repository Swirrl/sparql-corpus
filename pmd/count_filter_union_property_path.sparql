SELECT (COUNT(*) as ?tripod_count_var) {
  SELECT * WHERE {
            {
              <http://opendatacommunities.org/def/ontology/geography/refArea> ?p ?o .
              FILTER ( <http://opendatacommunities.org/def/ontology/geography/refArea> = <http://purl.org/linked-data/sdmx/2009/dimension#refArea> )
            }
            UNION
            {
              ?uri <http://www.w3.org/2000/01/rdf-schema#subPropertyOf>+ <http://purl.org/linked-data/sdmx/2009/dimension#refArea> .
              VALUES ?uri {<http://opendatacommunities.org/def/ontology/geography/refArea>}
            }
          }
}
